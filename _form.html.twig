{% for label, messages in app.flashes %}
    {% for message in messages %}
        <div class="alert alert-{{ label }}">
            {{ message }}
        </div>
    {% endfor %}
{% endfor %}

{{ form_start(form, { 'attr': {'novalidate': 'novalidate'} }) }}

    {# Champ Montant du prêt avec validation HTML désactivée #}
    {{ form_row(form.Montant_pret, { 'attr': {'required': false} }) }}  {# Assurez-vous que le nom est en minuscule #}
    {{ form_errors(form.Montant_pret) }}
    
    {# Champ Date du prêt avec validation HTML désactivée #}
    {{ form_row(form.Date_pret, { 'attr': {'required': false} }) }}
    {{ form_errors(form.Date_pret) }}

    {# Champ TMM (Taux Moyen du Marché) #}
    {{ form_row(form.TMM, { 'attr': {'required': false} }) }}
    {{ form_errors(form.TMM) }}
    
    {# Champ Taux d'intérêt #}
    {{ form_row(form.Taux, { 'attr': {'required': false} }) }}
    {{ form_errors(form.Taux) }}
    
    {# Champ Revenus bruts avec validation désactivée #}
    {{ form_row(form.Revenus_bruts, { 'attr': {'required': false} }) }}
    {{ form_errors(form.Revenus_bruts) }}

    {# Champ Age de l'employé #}
    {{ form_row(form.Age_employe, { 'attr': {'required': false} }) }}
    {{ form_errors(form.Age_employe) }}

    {# Champ Durée de remboursement (en mois) #}
    {{ form_row(form.duree_remboursement, { 'attr': {'required': false} }) }}
    {{ form_errors(form.duree_remboursement) }}

    {# Champ Catégorie avec affichage conditionnel si valeur spécifique #}
    {% if form.Categorie.vars.value in ['professionnel', 'personnel'] %}
        {{ form_row(form.Categorie, { 'attr': {'required': false} }) }}
        {{ form_errors(form.Categorie) }}
    {% endif %}

    <button class="btn">{{ button_label|default('Enregistrer') }}</button>

{{ form_end(form) }}
