{% extends 'base.html.twig' %}

{% block title %}Reponse index{% endblock %}

{% block body %}
    <h1>Reponse index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>ID_reponse</th>
                <th>Date_reponse</th>
                <th>Montant_demande</th>
                <th>Revenus_bruts</th>
                <th>Taux_interet</th>
                <th>Mensualite_credit</th>
                <th>Potentiel_credit</th>
                <th>Duree_remboursement</th>
                <th>Montant_autorise</th>
                <th>Assurance</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reponse in reponses %}
            <tr>
                <td>{{ reponse.IDReponse }}</td>
                <td>{{ reponse.DateReponse ? reponse.DateReponse|date('Y-m-d') : '' }}</td>
                <td>{{ reponse.MontantDemande }}</td>
                <td>{{ reponse.RevenusBruts }}</td>
                <td>{{ reponse.TauxInteret }}</td>
                <td>{{ reponse.MensualiteCredit }}</td>
                <td>{{ reponse.PotentielCredit }}</td>
                <td>{{ reponse.DureeRemboursement }}</td>
                <td>{{ reponse.MontantAutorise }}</td>
                <td>{{ reponse.Assurance }}</td>
                <td>
                    <a href="{{ path('app_reponse_show', {'ID_reponse': reponse.ID_reponse}) }}">show</a>
                    <a href="{{ path('app_reponse_edit', {'ID_reponse': reponse.ID_reponse}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_reponse_new') }}">Create new</a>
{% endblock %}
